<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon
  id="plugin.video.SportsDevil"
  version="1.8.5.7"
  name="SportsDevil"
  provider-name="MaxMustermann">
  <requires>
   <import addon="xbmc.python" version="2.0"/>
   <import addon="script.common.plugin.cache" version="0.9.1"/>
  </requires>
  <extension 
    point="xbmc.python.pluginsource"
    library="default.py">
   <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Play videos of different sports streaming sites</summary>
    <description>Play videos of different sports streaming sites</description>
    <platform>all</platform>
  </extension>
</addon>
<addon id="plugin.video.xstream"
	name="xStream"
	version="2.0.6"
	provider-name="MaxMustermann">
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="de">xStream</summary>
    <description lang="de">xStream ist ein Plugin, welches mit eigene Plugins erweitern werden kann. Hiermit kann man Filme, Serien, etc per Stream schauen</description>
    <summary lang="en">xStream</summary>
    <description lang="en">Plugin to watch streams from various film, trailer, music and sport sites</description>
    <platform>all</platform>
  </extension>
</addon>
